<header>
    <a href="/" id="title">RomlandTube</a>
    <%if (loggedIn) { %>
    <a id="logInName">Logged in as: <%- eescape(name) %></a>
    <a class="headlink" href="/logout">Log Out</a>
    <a class="headlink" href="/upload">Upload</a>
    <% } else{ %>
    <a class="headlink" href="/register">Register</a>
    <a class="headlink" href="/login">Login</a>
    <% } %>

    <label for="theme">Theme:</label>
    <select onchange="clickedSubmit()" name="theme" id="themes">

      <% for(let i=0; i<files.length; i++) {%>
        <% let name = files[i].substring(0,files[i].length-4) %> 
        <% let capitalName = name.charAt(0).toUpperCase() + name.slice(1); %>
        <% let selected = (name == "light") ? "selected" : "" %> 
        <option value="<%- name %>" <%- selected %> ><%- capitalName %></option>
     <% } %>
    </select>
  </header>