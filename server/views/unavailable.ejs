<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Unavailable</title>
    <script>
      function redirectAfter() {
        let reason = document.getElementById("reason");
        if (reason.innerHTML == "Invalid video id") {
            reason.innerHTML = reason.innerHTML + ", redirecting in 5s..."
          setTimeout(function () {
            window.location = "/";
          }, 5000);
        }
      }
    </script>
  </head>
  <body onload="redirectAfter()">
    <p id="reason"><%- reason %></p>
  </body>
</html>
